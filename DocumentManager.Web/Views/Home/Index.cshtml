<!-- Help & Support -->
<div class="help-section mb-5">
    <div class="card">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h4 class="mb-2">Нужна помощь с системой?</h4>
                    <p class="mb-md-0">Свяжитесь с технической поддержкой или ознакомьтесь с документацией</p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a href="@Url.Action("Guide", "Home")" class="btn btn-outline-primary">
                        <i class="bi bi-question-circle me-2"></i>Открыть справочник
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    /* Основные стили */
    .section-title {
        color: var(--dark-color);
        font-weight: 600;
        position: relative;
        display: inline-block;
    }

    /* Градиентный текст */
    .text-gradient {
        background: linear-gradient(90deg, #2b5797 0%, #5f8fcf 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: transparent;
    }

    /* Hero секция */
    .hero-section {
        padding: 3rem 0;
        position: relative;
        overflow: hidden;
    }

    /* Анимация документов */
    .hero-animation {
        position: relative;
        height: 360px;
        display: flex;
        justify-content: center;
        align-items: center;
        perspective: 1000px;
    }

    .document-stack {
        position: relative;
        width: 280px;
        height: 360px;
        transform-style: preserve-3d;
        animation: float 6s ease-in-out infinite;
    }

    .doc-card {
        position: absolute;
        width: 280px;
        height: 360px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        padding: 20px;
        transition: all 0.5s;
        display: flex;
        flex-direction: column;
    }

    .doc-card-1 {
        transform: translateZ(40px);
        top: -20px;
        left: 40px;
        border-top: 5px solid #2b5797;
    }

    .doc-card-2 {
        transform: translateZ(20px) translateX(-20px) translateY(10px);
        border-top: 5px solid #5f8fcf;
    }

    .doc-card-3 {
        transform: translateZ(0) translateX(20px) translateY(40px);
        border-top: 5px solid #d4e3f9;
    }

    .doc-header {
        height: 24px;
        background: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .doc-body {
        flex: 1;
    }

    .doc-line {
        height: 12px;
        background: #f0f7ff;
        margin-bottom: 10px;
        border-radius: 3px;
        width: 90%;
    }

    .doc-line:nth-child(2) {
        width: 70%;
    }

    .doc-line:nth-child(3) {
        width: 50%;
    }

    .doc-footer {
        display: flex;
        justify-content: flex-end;
        margin-top: auto;
    }

    .doc-icon {
        width: 36px;
        height: 36px;
        background: #f0f7ff;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #2b5797;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-15px) rotate(2deg);
        }
    }

    /* Stats Cards */
    .stats-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .stats-number {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .stats-text {
        font-size: 1.1rem;
        font-weight: 500;
        color: #6c757d;
    }

    /* Feature Cards */
    .feature-card {
        background-color: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        border: 1px solid transparent;
        position: relative;
        z-index: 1;
    }

    .feature-item-parent:hover .feature-card {
        border-color: #e6f0ff;
        transform: translateY(-7px);
        box-shadow: 0 15px 30px rgba(43, 87, 151, 0.1);
    }

    .feature-icon .icon-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background-color: #f0f7ff;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        color: var(--primary-color);
        font-size: 1.5rem;
        transition: all 0.3s ease;
    }

    .feature-item-parent:hover .icon-circle {
        background-color: var(--primary-color);
        color: white;
        transform: scale(1.1);
    }

    .feature-title {
        margin-bottom: 15px;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .feature-item-parent:hover .feature-title {
        color: var(--primary-color);
    }

    .icon-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        margin-top: auto;
    }

    .icon-link i {
        margin-left: 5px;
        transition: transform 0.3s;
    }

    .icon-link:hover i {
        transform: translateX(5px);
    }

    /* Quick Access Cards */
    .quick-action-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s;
        overflow: hidden;
    }

    .quick-action-card:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
    }

    .documents-card:before {
        background: linear-gradient(to right, #2b5797, #5f8fcf);
    }

    .templates-card:before {
        background: linear-gradient(to right, #28a745, #5dd879);
    }

    .quick-action-card:hover {
        transform: translateY(-7px);
        box-shadow: 0 20px 30px rgba(0, 0, 0, 0.1);
    }

    .quick-action-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .documents-card .quick-action-icon {
        background: linear-gradient(135deg, #2b5797, #5f8fcf);
    }

    .templates-card .quick-action-icon {
        background: linear-gradient(135deg, #28a745, #5dd879);
    }

    /* Timeline Activity */
    .activity-timeline {
        position: relative;
    }

    .timeline-item {
        position: relative;
        padding-left: 40px;
        margin-bottom: 25px;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-item:before {
        content: '';
        position: absolute;
        left: 15px;
        top: 30px;
        bottom: -25px;
        width: 2px;
        background: #e9ecef;
    }

    .timeline-item:last-child:before {
        display: none;
    }

    .timeline-icon {
        position: absolute;
        left: 0;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #f0f7ff;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
        font-size: 0.9rem;
        z-index: 1;
    }

    .timeline-content {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
    }

    /* Responsive fixes */
    @@media (max-width: 992px) {
        .hero-animation {
            height: 300px;
        }
    }

    @@media (max-width: 768px) {
        .quick-actions {
            flex-direction: column;
        }

        .quick-actions .btn {
            margin: 5px 0;
            width: 100%;
        }

        .quick-actions .ms-2 {
            margin-left: 0 !important;
            margin-top: 8px !important;
        }
    }

    @@media (max-width: 576px) {
        .document-stack {
            transform: scale(0.8);
        }
    }
</style>
