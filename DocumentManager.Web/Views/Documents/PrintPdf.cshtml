@model PrintPdfViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Печать документа";
}

<style>
    /* Современный дизайн для страницы печати */
    .document-container {
        display: flex;
        height: calc(100vh - 56px);
        background-color: #f8f9fa;
    }
    
    .document-sidebar {
        width: 350px;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        padding: 25px;
        overflow-y: auto;
        z-index: 10;
    }
    
    .document-viewer-container {
        flex: 1;
        position: relative;
        background-color: #eaeaea;
    }
    
    .document-viewer {
        width: 100%;
        height: 100%;
        border: none;
    }
    
    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }
    
    .section-title i {
        margin-right: 8px;
        color: #0d6efd;
    }
    
    .info-card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        overflow: hidden;
    }
    
    .info-card-header {
        padding: 15px 20px;
        background-color: #f8f9fa;
        border-bottom: 1px solid #eee;
        font-weight: 600;
    }
    
    .info-card-body {
        padding: 20px;
    }
    
    .document-info dt {
        color: #6c757d;
        font-weight: 500;
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }
    
    .document-info dd {
        margin-bottom: 0.75rem;
        font-weight: 500;
        color: #333;
    }
    
    .action-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px;
        font-weight: 500;
        border-radius: 6px;
        width: 100%;
        transition: all 0.2s;
        margin-bottom: 10px;
    }
    
    .action-btn i {
        margin-right: 8px;
        font-size: 1.1rem;
    }
    
    .print-btn {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    
    .print-btn:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }
    
    .download-btn {
        color: #dc3545;
        border-color: #dc3545;
    }
    
    .download-btn:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }
    
    .back-btn {
        color: #6c757d;
        border-color: #6c757d;
    }
    
    .back-btn:hover {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }
    
    .tips-list {
        padding-left: 20px;
        margin-bottom: 0;
    }
    
    .tips-list li {
        margin-bottom: 10px;
        color: #555;
        font-size: 0.9rem;
        line-height: 1.5;
    }
    
    .tips-list li:last-child {
        margin-bottom: 0;
    }
    
    /* Стили для индикатора загрузки */
    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.9);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 100;
    }
    
    .loading-icon {
        font-size: 48px;
        color: #0d6efd;
        margin-bottom: 20px;
        animation: pulse 1.5s infinite;
    }
    
    .loading-text {
        font-size: 18px;
        font-weight: 500;
        color: #333;
        margin-bottom: 10px;
        text-align: center;
    }
    
    .loading-subtext {
        font-size: 14px;
        color: #6c757d;
        text-align: center;
    }
    
    @@keyframes pulse {
        0% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.1); opacity: 0.8; }
        100% { transform: scale(1); opacity: 1; }
    }
    
    /* Стили для печати */
    @@media print {
        .document-sidebar, 
        .navbar, 
        .footer, 
        .layout-header, 
        .layout-footer,
        .loading-overlay {
            display: none !important;
        }
        
        .document-container {
            display: block;
            height: auto;
        }
        
        .document-viewer-container {
            display: block;
            height: auto;
        }
        
        body {
            margin: 0;
            padding: 0;
            background: none !important;
        }
    }
</style>

<div class="document-container">
    <!-- Боковая панель с информацией о документе -->
    <div class="document-sidebar d-print-none">
        <h4 class="mb-4">
            <i class="bi bi-file-pdf text-danger me-2"></i>
            Печать документа
        </h4>
        
        <!-- Информация о документе -->
        <div class="section-title">
            <i class="bi bi-info-circle"></i>
            Информация о документе
        </div>
        <div class="info-card mb-4">
            <div class="info-card-body document-info">
                <dl class="mb-0">
                    <dt>Наименование</dt>
                    <dd>@Model.DocumentName</dd>
                    <dt>Заводской номер</dt>
                    <dd>@Model.FactoryNumber</dd>
                    <dt>Создан</dt>
                    <dd>@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
                    <dt>Автор</dt>
                    <dd>@Model.CreatedBy</dd>
                </dl>
            </div>
        </div>
        
        <!-- Действия -->
        <div class="section-title">
            <i class="bi bi-gear"></i>
            Действия
        </div>
        <div class="info-card mb-4">
            <div class="info-card-body">
                <button id="printBtn" class="btn btn-primary action-btn print-btn">
                    <i class="bi bi-printer"></i> Печать документа
                </button>
                <a href="@Model.PdfDownloadUrl" class="btn btn-outline-danger action-btn download-btn" download>
                    <i class="bi bi-download"></i> Скачать PDF
                </a>
                <a href="@Url.Action("Details", "Documents", new { id = Model.DocumentId })" class="btn btn-outline-secondary action-btn back-btn">
                    <i class="bi bi-arrow-left"></i> Вернуться к документу
                </a>
            </div>
        </div>
        
        <!-- Советы по печати -->
        <div class="section-title">
            <i class="bi bi-lightbulb"></i>
            Советы по печати
        </div>
        <div class="info-card">
            <div class="info-card-body">
                <ul class="tips-list">
                    <li>Для точной печати рекомендуется скачать PDF и распечатать из специальной программы (Adobe Reader или Foxit Reader)</li>
                    <li>В диалоге печати выберите "Реальный размер" или "Масштаб 100%"</li>
                    <li>Отключите опцию "Подгонять по размеру страницы" для сохранения пропорций документа</li>
                    <li>Для двусторонней печати используйте соответствующую опцию в настройках принтера</li>
                </ul>
            </div>
        </div>
    </div>
    
    <!-- Контейнер для просмотра PDF -->
    <div class="document-viewer-container">
        <!-- Индикатор загрузки PDF -->
        <div id="loadingOverlay" class="loading-overlay">
            <i class="bi bi-file-earmark-pdf loading-icon"></i>
            <div class="loading-text">Загрузка документа...</div>
            <div class="loading-subtext">Пожалуйста, подождите. Это может занять некоторое время.</div>
        </div>
        
        <!-- PDF просмотрщик -->
        <iframe id="pdfViewer" class="document-viewer" src="@Url.Action("ViewPdf", "Documents", new { id = Model.DocumentId })"></iframe>
    </div>
</div>

@section Scripts {
    <script>
        // Скрываем индикатор загрузки, когда PDF загружен
        document.getElementById('pdfViewer').addEventListener('load', function() {
            document.getElementById('loadingOverlay').style.display = 'none';
        });
        
        // Если PDF не загрузился в течение 45 секунд, показываем сообщение
        setTimeout(function() {
            const loadingOverlay = document.getElementById('loadingOverlay');
            if (loadingOverlay.style.display !== 'none') {
                const loadingText = loadingOverlay.querySelector('.loading-text');
                const loadingSubtext = loadingOverlay.querySelector('.loading-subtext');
                
                loadingText.textContent = 'Загрузка занимает больше времени, чем ожидалось';
                loadingSubtext.innerHTML = 'Вы можете скачать PDF-файл и открыть его локально<br>с помощью кнопки "Скачать PDF"';
            }
        }, 45000); // 45 секунд
        
        // Обработчик кнопки печати
        document.getElementById('printBtn').addEventListener('click', function() {
            // Проверяем, загрузился ли PDF
            if (document.getElementById('loadingOverlay').style.display !== 'none') {
                alert('Пожалуйста, дождитесь полной загрузки документа или скачайте PDF для локальной печати.');
                return;
            }
            
            // Определяем тип браузера и соответствующий способ печати
            if (navigator.userAgent.indexOf('Firefox') !== -1) {
                // Firefox: открываем PDF в новой вкладке и запускаем печать
                window.open('@Url.Action("ViewPdf", "Documents", new { id = Model.DocumentId })', '_blank');
                setTimeout(() => { window.print(); }, 500);
            } else {
                // Chrome, Edge и другие: печатаем через iframe
                const pdfFrame = document.getElementById('pdfViewer');
                if (pdfFrame && pdfFrame.contentWindow) {
                    pdfFrame.contentWindow.print();
                } else {
                    window.print();
                }
            }
        });

        // Автоматическая печать, если есть параметр print=true
        window.addEventListener('load', function() {
            if (new URLSearchParams(location.search).get('print') === 'true') {
                // Ждем загрузки PDF перед автопечатью
                const checkPdfLoaded = setInterval(function() {
                    if (document.getElementById('loadingOverlay').style.display === 'none') {
                        clearInterval(checkPdfLoaded);
                        setTimeout(() => {
                            document.getElementById('printBtn').click();
                        }, 1000);
                    }
                }, 500);
                
                // Таймаут на случай, если PDF никогда не загрузится
                setTimeout(() => {
                    clearInterval(checkPdfLoaded);
                }, 60000); // 1 минута
            }
        });
    </script>
}