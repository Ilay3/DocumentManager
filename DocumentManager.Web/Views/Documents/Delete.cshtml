@model DocumentManager.Web.Models.DocumentViewModel

@{
    ViewData["Title"] = "Удаление документа";
}

<h1>Удаление документа</h1>

<h3>Вы уверены, что хотите удалить этот документ?</h3>
<div>
    <h4>@Model.TemplateName</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Заводской номер:</dt>
        <dd class="col-sm-9">@Model.FactoryNumber</dd>

        <dt class="col-sm-3">Дата создания:</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-3">Создал:</dt>
        <dd class="col-sm-9">@Model.CreatedBy</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <partial name="_BackButton" model='new BackButtonModel {
    FallbackUrl = Url.Action("Index", "Documents"),
    ButtonText = "Отмена",
    ButtonClass = "btn btn-secondary",
    PreserveQuery = true
}' />
    </form>
</div>
