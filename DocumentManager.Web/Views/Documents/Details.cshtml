@model DocumentManager.Web.Models.DocumentViewModel

@{
    ViewData["Title"] = "Подробности документа";
}

<h1>Подробности документа</h1>

<div>
    <h4>@Model.TemplateName</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Заводской номер:</dt>
        <dd class="col-sm-9">@Model.FactoryNumber</dd>

        <dt class="col-sm-3">Дата создания:</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-3">Создал:</dt>
        <dd class="col-sm-9">@Model.CreatedBy</dd>
    </dl>

    <h5 class="mt-4">Значения полей:</h5>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Поле</th>
                <th>Значение</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var field in Model.FieldValues)
            {
                <tr>
                    <td>@field.Key</td>
                    <td>@field.Value</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.RelatedDocuments.Any())
    {
        <h5 class="mt-4">Связанные документы:</h5>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Тип документа</th>
                    <th>Заводской номер</th>
                    <th>Дата создания</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var relatedDocument in Model.RelatedDocuments)
                {
                    <tr>
                        <td>@relatedDocument.TemplateName</td>
                        <td>@relatedDocument.FactoryNumber</td>
                        <td>@relatedDocument.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@relatedDocument.Id" class="btn btn-sm btn-info">Подробности</a>
                                <a asp-action="Generate" asp-route-id="@relatedDocument.Id" class="btn btn-sm btn-success">Сгенерировать</a>
                                @if (!string.IsNullOrWhiteSpace(relatedDocument.GeneratedFilePath))
                                {
                                    <a asp-action="Download" asp-route-id="@relatedDocument.Id" class="btn btn-sm btn-primary">Скачать</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-action="Generate" asp-route-id="@Model.Id" class="btn btn-success">Сгенерировать документ</a>
    @if (!string.IsNullOrWhiteSpace(Model.GeneratedFilePath))
    {
        <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">Скачать документ</a>
        <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-info" target="_blank">Печать документа</a>

    }
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>
