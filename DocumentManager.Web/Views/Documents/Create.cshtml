@model List<DocumentManager.Web.Models.DocumentTemplateViewModel>

@{
    ViewData["Title"] = "Выбор шаблона документа";
}

<h1>Создание документа</h1>

<h4>Выберите шаблон документа</h4>

<div class="row">
    @foreach (var template in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@template.Name</h5>
                    <p class="card-text">Код: @template.Code</p>
                    <p class="card-text">Тип: @template.Type</p>
                    <a asp-action="CreateForm" asp-route-id="@template.Id" class="btn btn-primary">Выбрать</a>
                </div>
            </div>
        </div>
    }
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>
