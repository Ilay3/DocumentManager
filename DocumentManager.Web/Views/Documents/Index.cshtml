@model List<DocumentManager.Web.Models.DocumentViewModel>

@{
    ViewData["Title"] = "Документы";
}

<h1>Документы</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новый документ</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Заводской номер</th>
            <th>Тип документа</th>
            <th>Дата создания</th>
            <th>Создал</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var document in Model)
        {
            <tr>
                <td>@document.FactoryNumber</td>
                <td>@document.TemplateName</td>
                <td>@document.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                <td>@document.CreatedBy</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@document.Id" class="btn btn-sm btn-info">Подробности</a>
                        <a asp-action="Generate" asp-route-id="@document.Id" class="btn btn-sm btn-success">Сгенерировать</a>
                        @if (!string.IsNullOrWhiteSpace(document.GeneratedFilePath))
                        {
                            <a asp-action="Download" asp-route-id="@document.Id" class="btn btn-sm btn-primary">Скачать</a>
                        }
                        <a asp-action="Delete" asp-route-id="@document.Id" class="btn btn-sm btn-danger">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
