@model List<DocumentManager.Web.Models.DocumentTemplateViewModel>

@{
    ViewData["Title"] = "Шаблоны документов";
}

<h1>Шаблоны документов</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Код</th>
            <th>Наименование</th>
            <th>Тип</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var template in Model)
        {
            <tr>
                <td>@template.Code</td>
                <td>@template.Name</td>
                <td>@template.Type</td>
                <td>
                    <a asp-action="Details" asp-route-id="@template.Id" class="btn btn-sm btn-info">Подробности</a>
                </td>
            </tr>
        }
    </tbody>
</table>
