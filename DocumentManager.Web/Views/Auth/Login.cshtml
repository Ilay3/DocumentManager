@model DocumentManager.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Вход в систему";
    Layout = "_LayoutLogin";
}

<div class="login-container">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-10">
            <div class="text-center mb-5">
                <i class="bi bi-file-earmark-text text-primary display-1"></i>
                <h2 class="mt-3 mb-0">ДокМенеджер</h2>
                <p class="text-muted">Система управления документами</p>
            </div>

            <div class="card">
                <div class="card-body p-4">
                    <h4 class="card-title text-center mb-4">Вход в систему</h4>

                    <form asp-action="Login" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger py-2 mb-4">
                                <div asp-validation-summary="ModelOnly" class="mb-0"></div>
                            </div>
                        }

                        <div class="form-floating mb-4">
                            <input asp-for="FullName" class="form-control" id="fullName" placeholder="Введите ваше ФИО" autocomplete="name" autofocus />
                            <label asp-for="FullName">ФИО пользователя</label>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Войти
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">
                    © 2025 Система управления документами. Все права защищены.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}