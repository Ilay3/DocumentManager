{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=document_manager;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "DocumentManager": "Debug"
    }
  },
  "AllowedHosts": "*",
  "TemplatesBasePath": "D:\\DocumentManager\\Templates\\Word",
  "JsonBasePath": "D:\\DocumentManager\\Templates\\Json",
  "OutputBasePath": "D:\\DocumentManager\\Temp",
  "TemplateVersionMonitoring": {
    "CheckInterval": "03:00:00",
    "EnableAutoUpdate": false,
    "NotificationTimeout": "24:00:00",
    "VersionRegexPattern": "\\((\\d+)\\)$",
    "ScanSubdirectories": true,
    "MaxNotifications": 10
  }
}